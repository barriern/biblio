	pages = {179--201},
	file = {Snapshot:/Users/Nicolas/Zotero/storage/59H3YVFZ/JPO-D-12-0217.html:text/html;Full Text PDF:/Users/Nicolas/Zotero/storage/R9IMHD78/Barrier et al. - 2013 - Response of North Atlantic Ocean Circulation to At.pdf:application/pdf}
}

