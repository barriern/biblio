	keywords = {Climate variability, Coastal systems, Large-scale hydro-climatic indices, River inputs, Time-series, Weather regimes},
	pages = {79--90},
	file = {ScienceDirect Full Text PDF:/Users/Nicolas/Zotero/storage/5ARWVGIR/Tréguer et al. - 2014 - Large and local-scale influences on physical and c.pdf:application/pdf;ScienceDirect Snapshot:/Users/Nicolas/Zotero/storage/75X6ED92/S0924796314001481.html:text/html}
